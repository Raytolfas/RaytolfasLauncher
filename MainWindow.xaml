<Window x:Class="RaytolfasLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Raytolfas Launcher" Height="550" Width="900" 
        WindowStartupLocation="CenterScreen" Background="Transparent" 
        AllowsTransparency="True" WindowStyle="None"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="24" Background="#121212" BorderBrush="#271938" BorderThickness="1.5">
        <Border.OpacityMask>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Border Background="Black" 
                            CornerRadius="24" 
                            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}"
                            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Border}}"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Border.OpacityMask>

        <Grid>
            <tb:TaskbarIcon x:Name="MyNotifyIcon"
                            IconSource="Assets/logo.ico"
                            ToolTipText="Raytolfas Launcher">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu Background="Transparent" BorderThickness="0">
                        <ContextMenu.Resources>
                            <SolidColorBrush x:Key="MenuBackground" Color="#1E1E1E"/>
                            <SolidColorBrush x:Key="MenuText" Color="White"/>
                            <SolidColorBrush x:Key="MenuHover" Color="#333333"/>

                            <Style TargetType="{x:Type ContextMenu}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ContextMenu}">
                                            <Border Background="{StaticResource MenuBackground}"
                                                    CornerRadius="10"
                                                    BorderBrush="#444444"
                                                    BorderThickness="1"
                                                    Padding="5">
                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <Style TargetType="{x:Type MenuItem}">
                                <Setter Property="Foreground" Value="{StaticResource MenuText}"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="15,8"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type MenuItem}">
                                            <Border x:Name="ItemBorder" 
                                                    Background="Transparent" 
                                                    CornerRadius="5" 
                                                    Margin="2">
                                                <ContentPresenter ContentSource="Header" 
                                                                Margin="{TemplateBinding Padding}" 
                                                                HorizontalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource MenuHover}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ContextMenu.Resources>

                        <MenuItem Header="ОТКРЫТЬ ЛАУНЧЕР" Click="ToggleWindow_Click"/>
                        <Separator Background="#444444" Margin="10,2"/>
                        <MenuItem Header="ВЫХОД" Click="ShutdownApp_Click"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>

            <Image x:Name="MainBgImage" Stretch="UniformToFill" Source="Assets/background.png" Opacity="0.4">
                <Image.Effect>
                    <BlurEffect Radius="15"/>
                </Image.Effect>
            </Image>

            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25">
                    <Button Content="❤️" Click="OpenDonateWeb_Click" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="22" Cursor="Hand" Margin="0,0,15,0"/>
                    <Button Content="☁️" Click="LoadServers_Click" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="22" Cursor="Hand" Margin="0,0,15,0"/>
                    <Button Content="📝" Click="CheckUpdateBtn_Click" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="22" Cursor="Hand" Margin="0,0,15,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="25">
                    <Button Content="📂" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="22" Cursor="Hand" Margin="0,0,15,0">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="FolderMenu">
                                <MenuItem Header="Коренная папка" Click="OpenRootFolder_Click"/>
                                <MenuItem Header="Моды (mods)" Click="OpenModsFolder_Click"/>
                                <MenuItem Header="Миры (saves)" Click="OpenSavesFolder_Click"/>
                                <Separator/>
                                <MenuItem Header="Скриншоты" Click="OpenScreenshotsFolder_Click"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                        <Button.Style>
                            <Style TargetType="Button">
                                <EventSetter Event="Click" Handler="OpenFolderMenu_Click"/>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="⚙️" Click="SettingsBtn_Click" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="22" Cursor="Hand" Margin="0,0,15,0"/>
                    <Button Content="✕" Click="CloseBtn_Click" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="22" Cursor="Hand"/>
                </StackPanel>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="Assets/title.png" MaxWidth="350" Stretch="Uniform" Margin="5,0,5,25" />

                    <Border Background="#CC1E1E1E" CornerRadius="20" Padding="35" Width="420">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <Border Width="32" Height="32" CornerRadius="4" Background="#2D2D2D" Margin="0,0,10,0">
                                    <Image x:Name="PlayerAvatar" Source="https://minotar.net/avatar/char/32" Stretch="UniformToFill"/>
                                </Border>
                                <Label Content="АККАУНТ" Foreground="#BB86FC" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="AccountSelector" Height="45" Background="#2D2D2D" BorderThickness="0" 
                                        VerticalContentAlignment="Center" IsEditable="True" SelectionChanged="AccountSelector_SelectionChanged">
                                    <ComboBox.Resources>
                                        <Style TargetType="Border"><Setter Property="CornerRadius" Value="10"/></Style>
                                    </ComboBox.Resources>
                                </ComboBox>
                                <Button Grid.Column="1" Content="✏️" Width="45" Height="45" Margin="10,0,0,0" Click="OpenAccountManager_Click" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="#2D2D2D" CornerRadius="10">
                                                <TextBlock Text="✏️" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,3"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                            <Label Content="ВЕРСИЯ" Foreground="#BB86FC" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="VersionBox" Height="45" Background="#2D2D2D" BorderThickness="0" VerticalContentAlignment="Center">
                                    <ComboBox.Resources>
                                        <Style TargetType="{x:Type Border}"><Setter Property="CornerRadius" Value="10"/></Style>
                                    </ComboBox.Resources>
                                </ComboBox>
                                <Button Grid.Column="1" Content="🔄" Width="45" Height="45" Margin="10,0,0,0" Click="Refresh_Click" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="#2D2D2D" CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                            <Button x:Name="LaunchBtn" Content="ИГРАТЬ" Height="65" Click="LaunchBtn_Click" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="22"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid x:Name="grid">
                                                        <Border Background="#22000000" Margin="2,2,-2,-2" />
                                                        <Grid>
                                                            <Rectangle x:Name="mainRect">
                                                                <Rectangle.Fill>
                                                                    <DrawingBrush TileMode="Tile" Viewport="0,0,33,33" ViewportUnits="Absolute">
                                                                        <DrawingBrush.Drawing>
                                                                            <DrawingGroup>
                                                                                <GeometryDrawing Brush="#3a8f32"><GeometryDrawing.Geometry><RectangleGeometry Rect="0,0,12,12" /></GeometryDrawing.Geometry></GeometryDrawing>
                                                                                <GeometryDrawing Brush="#26701f"><GeometryDrawing.Geometry><RectangleGeometry Rect="12,0,12,12" /></GeometryDrawing.Geometry></GeometryDrawing>
                                                                                <GeometryDrawing Brush="#1e5c17"><GeometryDrawing.Geometry><RectangleGeometry Rect="0,12,12,12" /></GeometryDrawing.Geometry></GeometryDrawing>
                                                                                <GeometryDrawing Brush="#2f7a25"><GeometryDrawing.Geometry><RectangleGeometry Rect="12,12,12,12" /></GeometryDrawing.Geometry></GeometryDrawing>
                                                                            </DrawingGroup>
                                                                        </DrawingBrush.Drawing>
                                                                    </DrawingBrush>
                                                                </Rectangle.Fill>
                                                            </Rectangle>
                                                            <Border BorderBrush="#33000000" BorderThickness="0,0,0,3" VerticalAlignment="Bottom" Height="5"/>
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                        </Grid>
                                                        <Rectangle x:Name="hoverOverlay" Fill="White" Opacity="0"/>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="hoverOverlay" Property="Opacity" Value="0.1"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="grid" Property="RenderTransform">
                                                                <Setter.Value><TranslateTransform Y="2"/></Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <StackPanel x:Name="DownloadPanel" Visibility="Collapsed" Margin="0,10,0,0">
                                <TextBlock x:Name="StatusLabel" Text="Приготовление..." Foreground="White" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <ProgressBar x:Name="DownloadProgress" Height="15" Foreground="#BB86FC" Background="#2D2D2D"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Border x:Name="SettingsModal" Background="#F8121212" CornerRadius="19" Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                    <TextBlock Text="НАСТРОЙКИ" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <Label Content="ФОН ЛАУНЧЕРА:" Foreground="Gray" FontSize="10"/>
                    <Grid Margin="0,5,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="BgPathBox" IsReadOnly="True" Background="#2D2D2D" Foreground="White" BorderThickness="0" Padding="8" VerticalContentAlignment="Center"/>
                        <Button Grid.Column="1" Content="ВЫБРАТЬ" Click="SelectBackground_Click" Width="80" Margin="10,0,0,0" Background="#BB86FC" Foreground="Black" FontWeight="Bold">
                            <Button.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="5"/></Style></Button.Resources>
                        </Button>
                    </Grid>

                    <Label Content="ПАПКА ИГРЫ:" Foreground="Gray" FontSize="10"/>
                    <Grid Margin="0,5,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="PathBox" IsReadOnly="True" Background="#2D2D2D" Foreground="White" BorderThickness="0" Padding="8" VerticalContentAlignment="Center"/>
                        <Button Grid.Column="1" Content="ОБЗОР" Click="SelectPath_Click" Width="80" Margin="10,0,0,0" Background="#BB86FC" Foreground="Black" FontWeight="Bold">
                            <Button.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="5"/></Style></Button.Resources>
                        </Button>
                    </Grid>

                    <Label Content="ОПЦИИ:" Foreground="Gray" FontSize="10"/>
                    <StackPanel Margin="0,5,0,15">
                        <CheckBox x:Name="CbDiscordRPC" Content="Discord Rich Presence" Foreground="White" IsChecked="True" Margin="0,5"/>
                        <CheckBox x:Name="CbHideLauncher" Content="Скрывать лаунчер при запуске" Foreground="White" Margin="0,5"/>
                    </StackPanel>

                    <Label Content="ОТОБРАЖАТЬ ВЕРСИИ:" Foreground="Gray" FontSize="10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,15">
                        <CheckBox x:Name="CbReleases" Content="Релизы" Foreground="White" IsChecked="True" Margin="5"/>
                        <CheckBox x:Name="CbSnapshots" Content="Снапшоты" Foreground="White" Margin="5"/>
                        <CheckBox x:Name="CbModded" Content="Моды" Foreground="White" IsChecked="True" Margin="5"/>
                    </StackPanel>

                    <StackPanel>
                        <Label Content="ОПЕРАТИВНАЯ ПАМЯТЬ:" Foreground="Gray" FontSize="10"/>
                        
                        <Slider x:Name="RamSlider" 
                                Minimum="1024" 
                                Maximum="16384" 
                                Value="4096" 
                                TickFrequency="1024" 
                                TickPlacement="None" 
                                IsSnapToTickEnabled="True"/>

                        <UniformGrid Columns="5" Margin="0,-5,0,10">
                            <TextBlock Text="1GB" Foreground="Gray" FontSize="9" HorizontalAlignment="Left"/>
                            <TextBlock Text="4GB" Foreground="Gray" FontSize="9" HorizontalAlignment="Center"/>
                            <TextBlock Text="8GB" Foreground="Gray" FontSize="9" HorizontalAlignment="Center"/>
                            <TextBlock Text="12GB" Foreground="Gray" FontSize="9" HorizontalAlignment="Center"/>
                            <TextBlock Text="16GB" Foreground="Gray" FontSize="9" HorizontalAlignment="Right"/>
                        </UniformGrid>

                        <TextBlock Text="{Binding ElementName=RamSlider, Path=Value, StringFormat={}{0} MB}" 
                                Foreground="#BB86FC" 
                                FontWeight="Bold"
                                HorizontalAlignment="Center" 
                                Margin="0,0,0,20"/>
                    </StackPanel>

                    <Button Content="СОХРАНИТЬ" Click="SaveSettings_Click" Height="40" Background="#BB86FC" FontWeight="Bold">
                        <Button.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="8"/></Style></Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

            <Grid x:Name="ServerModal" Visibility="Collapsed" Background="#AA000000">
                <Border Background="#1E1E1E" CornerRadius="20" Width="500" Height="450" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="#BB86FC" BorderThickness="1">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Рекомендуемое:" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <ListBox x:Name="ServersList" 
                                Grid.Row="1" 
                                Background="Transparent" 
                                BorderThickness="0" 
                                Margin="10,0"
                                HorizontalContentAlignment="Stretch" 
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,2"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter HorizontalAlignment="Stretch"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2D2D2D" 
                                            CornerRadius="12" 
                                            Margin="2,5" 
                                            Padding="12" 
                                            BorderBrush="#33FFFFFF" 
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/> <ColumnDefinition Width="*"/>  <ColumnDefinition Width="Auto"/> </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Width="45" Height="45" CornerRadius="8" ClipToBounds="True">
                                                <Image Source="{Binding LogoUrl}" Stretch="UniformToFill"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" Margin="12,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" Foreground="#BB86FC" FontWeight="Bold" FontSize="15"/>
                                                <TextBlock Text="{Binding Description}" Foreground="Gray" FontSize="10" TextWrapping="Wrap"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0">
                                                <TextBlock Text="{Binding Version}" 
                                                        Foreground="#a250ff" 
                                                        FontWeight="Bold" 
                                                        FontSize="10" 
                                                        HorizontalAlignment="Center" 
                                                        Margin="0,0,0,5"/>

                                                <TextBlock Text="{Binding IP}" 
                                                        Foreground="#a250ff" 
                                                        FontWeight="Bold" 
                                                        FontSize="10" 
                                                        HorizontalAlignment="Center" 
                                                        Margin="0,0,0,5"/>

                                                <Button Content="IP" 
                                                        Click="CopyIP_Click" 
                                                        Tag="{Binding IP}" 
                                                        Width="45" 
                                                        Height="25"
                                                        Background="#BB86FC" 
                                                        Foreground="Black" 
                                                        FontWeight="Bold"
                                                        FontSize="10">
                                                    <Button.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="6"/>
                                                        </Style>
                                                    </Button.Resources>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Grid.Row="2" Content="ЗАКРЫТЬ" Click="CloseServerModal_Click" Margin="0,15,0,0" Height="40" Background="#BB86FC" FontWeight="Bold"/>
                    </Grid>
                </Border>
            </Grid>
            <Grid VerticalAlignment="Bottom" Margin="10,0,10,10">
                <TextBlock x:Name="VersionText" Text="v...(грузитсьсяяя)" 
                        Foreground="Gray" FontSize="12" 
                        HorizontalAlignment="Left" VerticalAlignment="Bottom"/>

                <TextBlock Text="powered by raytolfas"
                        Foreground="Gray" FontSize="12" 
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        >
                </TextBlock>
            </Grid>
        </Grid>
    </Border>
</Window>